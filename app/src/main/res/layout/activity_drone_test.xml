<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DroneTestActivity"
    android:orientation="vertical"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/title_bar_background"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back"
            android:scaleX="2"
            android:scaleY="2"
            app:tint="@color/white"
            android:background="@color/title_bar_background"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/drone_test"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/app_text_color"
            android:padding="10dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/motor_speed"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_fr"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarMotorFr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="127"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/speedFr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_fl"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarMotorFl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="127"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/speedFl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_br"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarMotorBr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="127"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/speedBr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_bl"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarMotorBl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="127"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/speedBl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_all"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarMotorAll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="127"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/speedAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/target_angle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pitch"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarTargetPitch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="-90"
                    android:max="90"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/targetPitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/angle"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/roll"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarTargetRoll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="-90"
                    android:max="90"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/targetRoll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/angle"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/pid"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kp"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarKp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/kp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/angle"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ki"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarKi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/ki"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/angle"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/kd"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"/>

                <SeekBar
                    android:id="@+id/seekbarKd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"

                    android:min="0"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/app_hint_color" />

                <TextView
                    android:id="@+id/kd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/angle"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:gravity="end"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <com.ben.dronecontroller.views.PitchRollView
                android:id="@+id/angleView"
                android:layout_width="match_parent"
                android:layout_height="360dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/qmi8658"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/ax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/x"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/ay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/y"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/az"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/z"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/gx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/x"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/gy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/y"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/gz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/z"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/pitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/pitch"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/roll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/roll"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lps22hb"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/altitude"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/air_pressure"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_hint_color"
                android:layout_margin="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/battery"
                    android:textColor="@color/app_hint_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>